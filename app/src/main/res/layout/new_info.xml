<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	
	android:id="@+id/bg_about"
	android:gravity="top"
	android:background="@drawable/carbon_fibre" 
	    		android:paddingBottom="@dimen/activity_vertical_margin"
	    		android:paddingLeft="@dimen/activity_horizontal_margin"
	    		android:paddingRight="@dimen/activity_horizontal_margin">	

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:gravity="top" android:padding="1dp"
	    android:orientation="vertical" >
		<LinearLayout
		    android:id="@+id/linearLayout2"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_above="@+id/text_about2"
		    android:layout_alignParentRight="true"
		    android:background="@drawable/web_container"
		    android:orientation="vertical" >
		    <WebView
		        android:id="@+id/wvChangeLog"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" />
		</LinearLayout>

	    <TextView
	        android:id="@+id/text_about6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/about_3"
	        android:textColor="#FFFFFF"
	        android:textSize="14dip"
	        android:textStyle="normal" />

	    <Button
	        android:id="@+id/btn_mail_segnalazione"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="43dp"
	        android:background="@drawable/lista_gradient"
	        android:singleLine="true"
	        android:text="@string/email"
	        android:textColor="#FFFFFF"
	        android:textSize="12dip"
	        android:textStyle="bold"
	        android:tint="#EE333333" />

	    <TextView
	        android:id="@+id/text_about11"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/btn_mail_segnalazione"
	        android:layout_centerHorizontal="true"
	        android:paddingBottom="5dip"
	        android:text="@string/send"
	        android:textColor="#FFFFFF"
	        android:textSize="14dip"
	        android:textStyle="normal" />

	    <TextView
	        android:id="@+id/txtVersion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/text_about11"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="14dp"
	        android:text="@string/version_n"
	        android:textColor="#FFFFFF"
	        android:textSize="15dip"
	        android:textStyle="normal" />

	    <TextView
	        android:id="@+id/text_about2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/txtVersion"
	        android:layout_centerHorizontal="true"
	        android:paddingTop="5dip"
	        android:text="@string/version"
	        android:textColor="#FFFFFF"
	        android:textSize="15dip"
	        android:textStyle="normal" />
	    <TextView
	        android:id="@+id/text_about3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="24dp"
	        android:text="@string/author"
	        android:textColor="#FFFFFF"
	        android:textSize="15dip"
	        android:textStyle="bold" />

	</RelativeLayout>

</RelativeLayout>