<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:background="@android:color/transparent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/cardview_default_elevation"
    android:background="@drawable/abc_popup_background_mtrl_mult"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@drawable/background_color">


            <android.support.v7.widget.Toolbar
                android:id="@+id/card_toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                app:titleTextAppearance="@style/Toolbar.TitleText"/>

            <LinearLayout

                    android:clickable="true"
                    android:longClickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:padding="4dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@drawable/background_color">

                    <!-- TIME -->
                    <ImageView
                        android:id="@+id/imgTime"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/time_dark" />

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75 Min"
                        android:textColor="#000000"
                        android:layout_alignBottom="@+id/imgTime"
                        android:layout_alignLeft="@+id/imgTime"
                        android:layout_alignStart="@+id/imgTime"
                        android:layout_marginLeft="55dp"/>
                    <!-- TIME -->

                    <!-- BURN -->

                        <ImageView
                        android:id="@+id/imgBurn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/burn_dark"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80dp"/>

                    <TextView
                        android:id="@+id/txtKal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="368 Kal"
                        android:textColor="#000000"
                        android:textSize="12dip"
                        android:layout_marginLeft="55dp"
                        android:layout_alignBottom="@+id/imgBurn"
                        android:layout_alignLeft="@+id/imgBurn"
                        android:layout_alignStart="@+id/imgBurn"/>
                    <!-- BURN -->

                    <!-- WORKOUT -->
                    <ImageView
                        android:id="@+id/imgTypeExercise"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/txtKm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,5 Km/h"
                        android:textColor="#000000"
                        android:textSize="12dip"
                        android:layout_marginLeft="55dp"
                        android:layout_alignBottom="@+id/imgTypeExercise"
                        android:layout_alignLeft="@+id/imgTypeExercise"
                        android:layout_alignStart="@+id/imgTypeExercise" />
                    <!-- WORKOUT -->


                    <!-- DISTANCE -->
                    <ImageView
                        android:id="@+id/imgMetric"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/metrics_dark"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="80dp" />

                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30Km"
                        android:textColor="#000000"
                        android:layout_marginLeft="55dp"
                        android:layout_alignBottom="@+id/imgMetric"
                        android:layout_alignLeft="@+id/imgMetric"
                        android:layout_alignStart="@+id/imgMetric"/>
                    <!-- DISTANCE -->

                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#eFeFeF"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/btnDett"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/background_grey"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/dett"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/right"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    </RelativeLayout>
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>






