<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="#797a9c" android:endColor="#82b0ca"
				android:angle="270" />
			<padding android:left="12dp" android:top="7dp" android:right="12dp"
				android:bottom="7dp" />
			<corners android:radius="0dp" />
			<stroke android:width="0.5dp" android:color="#797a9c" />
		</shape>
	</item>

	<item android:state_pressed="true" >
		<shape android:shape="rectangle">
			<gradient android:startColor="#797a9c" android:endColor="#82b0ca"
				android:angle="270" />
			<padding android:left="12dp" android:top="7dp" android:right="12dp"
				android:bottom="7dp" />
			<corners android:radius="0dp" />
			<stroke android:width="0.8dp" android:color="#797a9c" />
		</shape>
	</item>


	<item>
		<shape android:shape="rectangle">
			<gradient android:startColor="#82b0ca" android:endColor="#797a9c"
				android:angle="270" />
			<padding android:left="12dp" android:top="7dp" android:right="12dp"
				android:bottom="7dp" />
			<corners android:radius="0dp" />
			<stroke android:width="0.5dp" android:color="#82b0ca" />
		</shape>
	</item>

</selector>
