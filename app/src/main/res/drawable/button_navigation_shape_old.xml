<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:startColor="#55FFFFFF" android:endColor="#55BBBBBB"
						android:angle="0" />
					<padding android:left="12dp" android:top="7dp"
						android:right="12dp" android:bottom="7dp" />
					<corners android:radius="10dp" />
				</shape>
			</item>
			<item android:drawable="@drawable/right" />
		</layer-list>
	</item>

	<item android:state_focused="true">
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:startColor="#55FFFFFF" android:endColor="#55BBBBBB"
						android:angle="0" />
					<padding android:left="12dp" android:top="7dp"
						android:right="12dp" android:bottom="7dp" />
					<corners android:radius="10dp" />
				</shape>
			</item>
			<item android:drawable="@drawable/right" />
		</layer-list>
	</item>

	<item>
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:startColor="#55FFFFFF" android:endColor="#55BBBBBB"
						android:angle="0" />
					<padding android:left="12dp" android:top="7dp"
						android:right="12dp" android:bottom="7dp" />
					<corners android:radius="10dp" />
				</shape>
			</item>
			<item android:drawable="@drawable/right" />
		</layer-list>
	</item>
</selector>
